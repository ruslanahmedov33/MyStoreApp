<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.ParolUnutdumFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="500dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/backStackButtonForgot"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/transparent"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ParoluUnutdumYazisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fallingskymedium_ved9"
        android:text="Forgot Password?"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ParolBerpaAltYazisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/textBoz"
        android:fontFamily="@font/fallingskymedium_ved9"
        android:gravity="center"
        android:text="Your new password must be different\nfrom previously used passwords."
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/ParoluUnutdumYazisi"
        app:layout_constraintStart_toStartOf="@+id/ParoluUnutdumYazisi"
        app:layout_constraintTop_toBottomOf="@+id/ParoluUnutdumYazisi" />


    <TextView
        android:id="@+id/E_poctYazisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/fallingskymedium_ved9"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/layoutParolBerpaWWW"
        app:layout_constraintStart_toStartOf="@+id/layoutParolBerpaWWW" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutParolBerpaWWW"
        style="?attr/textInputFilledStyle"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:hint="@string/exampleGmailYazisi"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="@color/qehveyi"
        app:hintTextColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ParoluUnutdumYazisi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/daxilEmailBerpa"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/ParolBerpaEtButton"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="@color/qehveyi"
        android:fontFamily="@font/fallingskymedium_ved9"
        android:foregroundTint="@color/qehveyi"
        android:gravity="center"
        android:text="Restore Password"
        android:textColor="@color/background"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/layoutParolBerpaWWW"
        app:layout_constraintStart_toStartOf="@+id/layoutParolBerpaWWW"
        app:layout_constraintTop_toBottomOf="@+id/layoutParolBerpaWWW" />

    <TextView
        android:visibility="gone"
        android:id="@+id/ifEmailYoxdursa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:fontFamily="@font/fallingskymedium_ved9"
        android:text="E-poct teesuf ki qeydiyyatdan kecmiyib\nqeydiyyatdan kecmek ucun"
        app:layout_constraintEnd_toEndOf="@+id/ParolBerpaEtButton"
        app:layout_constraintStart_toStartOf="@+id/ParolBerpaEtButton"
        app:layout_constraintTop_toBottomOf="@+id/ParolBerpaEtButton" />




</androidx.constraintlayout.widget.ConstraintLayout>